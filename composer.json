{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.4",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-diactoros": "^1.7",
        "psr/http-message": "dev-master",
        "laminas/laminas-httphandlerrunner": ">=1",
        "aura/router": "3.*",
        "psr/http-server-middleware": "^1.0",
        "zendframework/zend-stratigility": "^3.0",
        "zendframework/zend-servicemanager": "^3.2",
        "psr/container": "^1.0",
        "zendframework/zend-config-aggregator": "^1.0",
        "twig/twig": "^2.4",
        "filp/whoops": "^2.2",
        "monolog/monolog": "^1.23",
      "ext-json": "*"
    }
,
    "require-dev": {
        "phpunit/phpunit": "^6.4.1",
        "psr/log": "^1.0"
    },

    "autoload": {
        "psr-4": {
            "Framework\\": "src/Framework/",
            "Tests\\": "tests",
            "App\\": "src/App/",
            "Infrastructure\\": "src/Infrastructure/"
        }
    },

    "scripts": {
        "serve": "php -S 0.0.0.0:8080 -t public",
        "test": "phpunit --colors=always",
        "development-enable": "cp config/autoload/development.local.php.dist config/autoload/development.local.php",
        "development-disable": "rm config/autoload/development.local.php"
    }
}