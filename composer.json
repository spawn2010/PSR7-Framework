{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.4",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-diactoros": "dev-master",
        "psr/http-message": "dev-master",
        "laminas/laminas-httphandlerrunner": ">=1",
        "aura/router": "3.*",
        "http-interop/http-middleware": "^0.5.0",
      "ext-json": "*"
    }
,
    "require-dev": {
        "phpunit/phpunit": "^6.4.1"
    },

    "autoload": {
        "psr-4": {
            "Framework\\": "src/Framework/",
            "Tests\\": "tests",
            "App\\": "src/App/"
        }
    }
}